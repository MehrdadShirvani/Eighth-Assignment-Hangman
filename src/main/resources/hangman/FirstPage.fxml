<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hangman.FirstPage">
    <children>
        <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true">
            <image>
                <Image url="@bg.jpg" />
            </image>
        </ImageView>
        <Button fx:id="BtnGoToLogin" onAction="#BtnGoToLoginClicked" layoutX="203.0" layoutY="111.0" mnemonicParsing="false" prefHeight="56.0" prefWidth="182.0" style="-fx-background-color: tranparent; -fx-border-color: black; -fx-border-radius: 20; -fx-border-width: 3;" text="Login">
            <font>
                <Font size="22.0" />
            </font>
        </Button>
      <Button fx:id="BtnGoToSignUp" onAction="#BtnGoToSignUpClicked" layoutX="203.0" layoutY="200.0" mnemonicParsing="false" prefHeight="56.0" prefWidth="182.0" style="-fx-background-color: tranparent; -fx-border-color: black; -fx-border-radius: 20; -fx-border-width: 3;" text="SignUp">
         <font>
            <Font size="22.0" />
         </font>
      </Button>
      <AnchorPane fx:id="signupContainer" visible="false" layoutX="200.0" layoutY="81.0" prefHeight="238.0" prefWidth="200.0">
         <children>
            <TextField fx:id="TxtSignupName" layoutX="26.0" layoutY="36.0" promptText="Name" style="-fx-background-color: transparent; -fx-border-color: black; -fx-prompt-text-fill: Black;" />
            <TextField fx:id="TxtSignUpUsername" layoutX="27.0" layoutY="74.0" promptText="Username" style="-fx-background-color: transparent; -fx-border-color: black; -fx-prompt-text-fill: Black;" />
            <PasswordField fx:id="TxtSignupPassword"  layoutX="26.0" layoutY="112.0" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: black; -fx-prompt-text-fill: Black;" />
            <Button layoutX="26.0" layoutY="147.0" mnemonicParsing="false" onAction="#BtnSignUpClicked" prefHeight="32.0" prefWidth="150.0" style="-fx-background-color: tranparent; -fx-border-color: green; -fx-border-radius: 10; -fx-border-width: 3;" text="Sign Up" textFill="#01b410" />
            <Button layoutX="27.0" layoutY="185.0" mnemonicParsing="false" onAction="#BtnCancelClicked" prefHeight="32.0" prefWidth="150.0" style="-fx-background-color: tranparent; -fx-border-color: red; -fx-border-radius: 10; -fx-border-width: 3;" text="Cancel" textFill="#f43131" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="loginContainer" visible="false" layoutX="200.0" layoutY="82.0" prefHeight="238.0" prefWidth="200.0">
         <children>
            <TextField fx:id="TxtLoginUsername" layoutX="27.0" layoutY="74.0" promptText="Username" style="-fx-background-color: transparent; -fx-border-color: black; -fx-prompt-text-fill: Black;" />
            <PasswordField fx:id="TxtLoginPassword" layoutX="26.0" layoutY="112.0" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: black; -fx-prompt-text-fill: Black;" />
            <Button layoutX="26.0" layoutY="147.0" mnemonicParsing="false" onAction="#BtnLoginClicked" prefHeight="32.0" prefWidth="150.0" style="-fx-background-color: tranparent; -fx-border-color: green; -fx-border-radius: 10; -fx-border-width: 3;" text="Login" textFill="#01b410" />
            <Button layoutX="27.0" layoutY="185.0" mnemonicParsing="false" onAction="#BtnCancelClicked" prefHeight="32.0" prefWidth="150.0" style="-fx-background-color: tranparent; -fx-border-color: red; -fx-border-radius: 10; -fx-border-width: 3;" text="Cancel" textFill="#f43131" />
         </children>
      </AnchorPane>
    </children>
</AnchorPane>
